<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_sixteen"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/fire_basic_notification_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fire Basic Notification"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_fifty"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/download_notification_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Route"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_sixteen" />

    <Button
        android:id="@+id/expandable_notification_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fire expandable notification"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_sixteen" />

</LinearLayout>